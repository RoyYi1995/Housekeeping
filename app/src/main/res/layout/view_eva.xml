<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/eva_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="付"/>
    <TextView
        android:id="@+id/eva_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eva_name_tv"
        android:text="2017.12.12"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/eva_name_tv"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/eva_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eva_name_tv"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="完成得不错"/>
</RelativeLayout>