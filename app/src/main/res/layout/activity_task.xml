<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jack.housekeeping.activity.TaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_name_tv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="任务名："
                android:textColor="#333"
                android:textSize="20sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="家政活动"
                android:textColor="#333"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_time_tv"
                style="@style/task_name_tv"
                android:text="发布日期：" />

            <EditText
                style="@style/task_value_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="家政活动" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_info_tv"
                style="@style/task_name_tv"
                android:text="任务说明：" />

            <EditText
                style="@style/task_value_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="家政活动" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_money_tv"
                style="@style/task_name_tv"
                android:text="任务酬劳：" />

            <EditText
                style="@style/task_value_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="¥200" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_people_tv"
                style="@style/task_name_tv"
                android:text="任务联系人：" />

            <EditText
                style="@style/task_value_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="张三" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_people_phone_tv"
                style="@style/task_name_tv"
                android:text="任务联系方式：" />

            <EditText
                style="@style/task_value_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="¥200" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_get_people_tv"
                style="@style/task_name_tv"
                android:text="领取人：" />

            <EditText
                style="@style/task_value_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="王宇飞" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999">
        </LinearLayout>

    </LinearLayout>
</ScrollView>
